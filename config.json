{
    "version": "0.2a1",
    
    "pdf": {
        "split_size": 20.0
    },

    "rulers": [
        {
            "type": "char",
            "title": "全角数字替换为半角",
            "from": "０１２３４５６７８９",
            "to": "0123456789"
        },
        {
            "type": "replace",
            "title": "章节规范",
            "from": ["^(第\\s*[0-9零一二三四五六七八九]+\\s*[章节]\\s*)"],
            "to": ["##\\1"]
        }
    ]
}
